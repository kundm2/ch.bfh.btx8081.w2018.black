<Context>
	<Resource name="jdbc/postgres"
		auth="Container"
		type="javax.sql.DataSource"
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://127.0.0.1:5432/exampledb"
		username="myuser"
		password="mypasswd"
		maxActive="20"
		maxIdle="10"
		maxWait="-1">
	</Resource>
</Context>